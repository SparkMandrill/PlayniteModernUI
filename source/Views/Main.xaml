                                                                <Condition Binding="{Settings Fullscreen.Columns}" Value="2"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ItemsControl.MaxHeight" Value="700"/>
                                                    </MultiDataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                                                <Condition Binding="{Settings Fullscreen.Columns}" Value="3"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ItemsControl.MaxHeight" Value="650"/>
                                                    </MultiDataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                                                <Condition Binding="{Settings Fullscreen.Columns}" Value="4"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ItemsControl.MaxHeight" Value="650"/>
                                                    </MultiDataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                                                <Condition Binding="{Settings Fullscreen.Columns}" Value="5"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ItemsControl.MaxHeight" Value="600"/>
                                                    </MultiDataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                                                <Condition Binding="{Settings Fullscreen.Columns}" Value="6"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ItemsControl.MaxHeight" Value="500"/>
                                                    </MultiDataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                                                <Condition Binding="{Settings Fullscreen.Columns}" Value="7"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ItemsControl.MaxHeight" Value="450"/>
                                                    </MultiDataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                                                <Condition Binding="{Settings Fullscreen.Columns}" Value="8"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ItemsControl.MaxHeight" Value="400"/>
                                                    </MultiDataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                                                <Condition Binding="{Settings Fullscreen.Columns}" Value="9"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ItemsControl.MaxHeight" Value="400"/>
                                                    </MultiDataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                                                <Condition Binding="{Settings Fullscreen.Columns}" Value="10"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ItemsControl.MaxHeight" Value="350"/>
