                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <TextBlock Text="{DynamicResource LOCGridViewLabel}" VerticalAlignment="Center" MaxWidth="200"
                                                           Style="{DynamicResource TextBlockBaseStyle}" TextTrimming="CharacterEllipsis"
                                                           Foreground="White"
                                                           Margin="60,0,10,0"/>

                                            <StackPanel Margin="0,0,0,0" HorizontalAlignment="Left">
                                                <CheckBoxEx x:Name="ChangeViewButton" IsChecked="{Settings Fullscreen.HorizontalLayout, Mode=TwoWay}"
                                            Style="{DynamicResource ChangeViewButton}"/>
                                            </StackPanel>
                                        </Grid>

                                        <Grid x:Name="MainMenu" Margin="0,25,0,0" VerticalAlignment="Bottom">
                                            <Border Background="{DynamicResource ControlButtonBrush}" CornerRadius="10" HorizontalAlignment="Stretch" Margin="-10,-10,0,-10">
                                                <Border.Style>
                                                    <Style>
                                                        <Setter Property="ItemsControl.Opacity" Value="0"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=MainMenu, Path=IsKeyboardFocusWithin}" Value="True">
                                                                <Setter Property="ItemsControl.Opacity" Value="1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=MainMenu, Path=IsMouseOver}" Value="True">
                                                                <Setter Property="ItemsControl.Opacity" Value="1"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="60,0,10,0" Width="200" Height="40">
                                                <TextBlock Text="Playnite " VerticalAlignment="Center"
                                                           Style="{DynamicResource TextBlockBaseStyle}" TextTrimming="CharacterEllipsis"
                                                           Foreground="White" />
                                                <TextBlock Text="{DynamicResource LOCSettingsLabel}" VerticalAlignment="Center"
                                                           Style="{DynamicResource TextBlockBaseStyle}" TextTrimming="CharacterEllipsis"
                                                           Foreground="White" />
                                            </StackPanel>

                                            <ButtonEx x:Name="PART_ButtonMainMenu" VerticalAlignment="Center" HorizontalAlignment="Left"
                                          Style="{DynamicResource ButtonMainMenu}"
                                          Margin="0,0,0,0" Height="38" Width="38"
                                          Grid.Column="10">
                                                <Button.Content>
                                                    <Image RenderOptions.BitmapScalingMode="Fant" Margin="2"
                                           Source="{ThemeFile 'Images/applogo_clean.png'}" />
                                                </Button.Content>
                                            </ButtonEx>
                                        </Grid>

                                    </StackPanel>
                                </Grid-->
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,0" Tag="{DynamicResource FilterPresetVertical}">
                                    <Grid.Style>
                                        <Style>
                                            <Setter Property="ItemsControl.Width" Value="80"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ElementName=PART_ElemFilters, Path=Visibility}" Value="Collapsed"/>
                                                        <Condition Binding="{Binding ElementName=PART_ElemFiltersAdditional, Path=Visibility}" Value="Collapsed"/>
                                                        <Condition Binding="{Binding ElementName=PART_ContentFilterItems, Path=Visibility}" Value="Collapsed"/>
                                                        <Condition Binding="{Binding ElementName=FilterPresetsSideBar, Path=IsKeyboardFocusWithin}" Value="True"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <MultiDataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Width" Duration="0:0:0.3" From="80" To="300"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.EnterActions>
                                                    <MultiDataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Width" BeginTime="0:0:0.1" Duration="0:0:0.3" From="300" To="80"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.ExitActions>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ElementName=PART_ElemFilters, Path=Visibility}" Value="Collapsed"/>
                                                        <Condition Binding="{Binding ElementName=PART_ElemFiltersAdditional, Path=Visibility}" Value="Collapsed"/>
                                                        <Condition Binding="{Binding ElementName=PART_ContentFilterItems, Path=Visibility}" Value="Collapsed"/>
                                                        <Condition Binding="{Binding ElementName=SideBar, Path=IsKeyboardFocusWithin}" Value="True"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <MultiDataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Width" Duration="0:0:0.3" From="80" To="300"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.EnterActions>
                                                    <MultiDataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Width" BeginTime="0:0:0.1" Duration="0:0:0.3" From="300" To="80"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.ExitActions>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                </Grid>

                                <!--CURRENT FILTER PRESET NAME-->
                                <Grid Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Tag="{DynamicResource FilterPresetVertical}">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Margin" Value="50,-90,0,0"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Margin" Value="50,-20,0,0"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                                        <Condition Binding="{Binding ElementName=FilterPresets, Path=IsKeyboardFocusWithin}" Value="True"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Margin" Value="50,-20,0,0"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                                        <Condition Binding="{Binding ElementName=FilterPresets, Path=IsKeyboardFocusWithin}" Value="True"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Margin" Value="50,-90,0,0"/>
                                                </MultiDataTrigger>

                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="False"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Margin" Value="65,-90,0,0"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="False"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Margin" Value="65,-20,0,0"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="False"/>
                                                        <Condition Binding="{Binding ElementName=FilterPresets, Path=IsKeyboardFocusWithin}" Value="True"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Margin" Value="65,-20,0,0"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="False"/>
                                                        <Condition Binding="{Binding ElementName=FilterPresets, Path=IsKeyboardFocusWithin}" Value="True"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Margin" Value="65,-90,0,0"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Tag="{DynamicResource DropShadows}">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                            <Setter Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect BlurRadius="5" />
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <TextBlock Text="{Binding ActiveFilterPreset.Name}" Style="{DynamicResource TextBlockBaseStyle}" FontSize="46"/>
                                            <Border BorderBrush="White" BorderThickness="1.5" HorizontalAlignment="Stretch" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <!--MAIN DOCK-->
                                <DockPanel Grid.Column="1" HorizontalAlignment="Left">
                                    <Filters x:Name="PART_ElemFilters"
                                         DockPanel.Dock="Left" Focusable="False"/>

                                    <FiltersAdditional x:Name="PART_ElemFiltersAdditional"
                                                   DockPanel.Dock="Left" Focusable="False"/>

                                    <ContentControl x:Name="PART_ContentFilterItems"
                                            DockPanel.Dock="Left" Focusable="False"/>

                                    

                                    <Grid DockPanel.Dock="Right">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!--HORIZONTAL INFO-->
                                        <Grid Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Tag="{DynamicResource DropShadows}">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Margin" Value="50,50,0,0"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Settings Fullscreen.HorizontalLayout}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                            <Setter Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect BlurRadius="5" />
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <StackPanel>
                                                <Grid Tag="{DynamicResource MainScreenLogo}" Style="{DynamicResource MainScreenTitleStyle}">
                                                    <TextBlock HorizontalAlignment="Left" Style="{DynamicResource TextBlockBaseStyle}"
                                                           Text="{Binding SelectedGame.DisplayName}"
                                                           FontWeight="Bold"
                                                           TextWrapping="WrapWithOverflow" 
                                                           FontSize="42" Margin="0,0,0,10">
                                                    </TextBlock>
                                                </Grid>

                                                <Grid Tag="{DynamicResource MainScreenLogo}" Style="{DynamicResource MainScreenLogoStyle}" Margin="0,0,0,0" DockPanel.Dock="Top">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" MaxHeight="150">
                                                        <!--Extra Metadata Tools Logo-->
                                                        <StackPanel Name="Icon" Orientation="Vertical">
                                                            <TextBlock Name="LogoPath" Tag="{DynamicResource ExtraMetadataPath}" Visibility="Collapsed">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Text">
                                                                            <Setter.Value>
                                                                                <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                                                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                                                    <Binding Source="\ExtraMetadata\games\"/>
                                                                                    <Binding Path="SelectedGame.Id"/>
                                                                                    <Binding Source="\logo.png" />
                                                                                </MultiBinding>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                            <StackPanel HorizontalAlignment="Left">
                                                                <FadeImage Name="LogoImage" Grid.ZIndex="1" Width="500" MaxHeight="140" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant" 
                                                                           VerticalAlignment="Top" HorizontalAlignment="Left" Tag="{DynamicResource UseAbsoluteExtraMetadataPath}">
                                                                    <FadeImage.Style>
                                                                        <Style TargetType="FadeImage">
                                                                            <Setter Property="Source" Value="{Binding ElementName=LogoPath, Path=Text}"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="">
                                                                                    <Setter Property="Source" Value="{Binding ElementName=LogoPath, Path=Text, Converter={StaticResource ImageStringToImageConverter}}"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </FadeImage.Style>
                                                                </FadeImage>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid  Tag="{DynamicResource DescriptionOnOff}" Style="{DynamicResource DscriptionOnOffStyle}">
                                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,10,0,20">
                                                        <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                               Text="{Binding SelectedGame.Platforms[0]}" Margin="0,0,20,0"/>
                                                        <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                               Text="{Binding SelectedGame.ReleaseYear}" Margin="0,0,20,0"/>                                                        
                                                    </StackPanel>
                                                </Grid>

                                                <Grid HorizontalAlignment="Left" Width="800" MaxHeight="150" Tag="{DynamicResource DescriptionOnOff}" Style="{DynamicResource DscriptionOnOffStyle}">
